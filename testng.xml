<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="E-Commerce Test Suite" parallel="false">

    <listeners>
        <listener class-name="extentreportlistener.ExtentTestListener" />
    </listeners>

    <test name="Chrome Tests">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.Ecommerce.tests.LoginTest" />
            <class name="com.Ecommerce.tests.AddToCartTest" />
            <class name="com.Ecommerce.tests.CheckOutTest" />
        </classes>
    </test>

    <test name="Firefox Tests">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.Ecommerce.tests.LoginTest" />
            <class name="com.Ecommerce.tests.AddToCartTest" />
            <class name="com.Ecommerce.tests.CheckOutTest" />
        </classes>
    </test>

</suite>
